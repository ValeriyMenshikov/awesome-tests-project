{
    "openapi": "3.1.0",
    "info": {
        "title": "Auth API",
        "version": "0.1.0"
    },
    "servers": [
        {
            "url": "/auth"
        }
    ],
    "paths": {
        "/auth/auth": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Авторизация",
                "description": "Метод для авторизации пользователя",
                "operationId": "auth_auth_auth_post",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginCredentials"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserEnvelope"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HTTPValidationError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/logout": {
            "delete": {
                "tags": [
                    "Auth"
                ],
                "summary": "Выход",
                "description": "Метод для выхода пользователя",
                "operationId": "logout_auth_logout_delete",
                "parameters": [
                    {
                        "name": "token",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "description": "Авторизационный токен",
                            "title": "Token"
                        },
                        "description": "Авторизационный токен"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/logout_auth_logout_delete_response_200"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HTTPValidationError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/logout/all": {
            "delete": {
                "tags": [
                    "Auth"
                ],
                "summary": "Выход",
                "description": "Метод для выхода пользователя со всех устройств",
                "operationId": "logout_all_auth_logout_all_delete",
                "parameters": [
                    {
                        "name": "token",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "description": "Авторизационный токен",
                            "title": "Token"
                        },
                        "description": "Авторизационный токен"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/logout_all_auth_logout_all_delete_response_200"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HTTPValidationError"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "HTTPValidationError": {
                "properties": {
                    "detail": {
                        "items": {
                            "$ref": "#/components/schemas/ValidationError"
                        },
                        "type": "array",
                        "title": "Detail"
                    }
                },
                "type": "object",
                "title": "HTTPValidationError"
            },
            "LoginCredentials": {
                "properties": {
                    "login": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Login"
                    },
                    "password": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Password"
                    },
                    "rememberMe": {
                        "anyOf": [
                            {
                                "type": "boolean"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Rememberme"
                    }
                },
                "additionalProperties": false,
                "type": "object",
                "title": "LoginCredentials"
            },
            "Rating": {
                "properties": {
                    "enabled": {
                        "anyOf": [
                            {
                                "type": "boolean"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Enabled",
                        "description": "Rating participation flag"
                    },
                    "quality": {
                        "anyOf": [
                            {
                                "type": "integer"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Quality",
                        "description": "Quality rating"
                    },
                    "quantity": {
                        "anyOf": [
                            {
                                "type": "integer"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Quantity",
                        "description": "Quantity rating"
                    }
                },
                "type": "object",
                "title": "Rating"
            },
            "User": {
                "properties": {
                    "login": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Login",
                        "description": "Login"
                    },
                    "roles": {
                        "anyOf": [
                            {
                                "items": {
                                    "$ref": "#/components/schemas/UserRole"
                                },
                                "type": "array"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Roles",
                        "description": "Roles"
                    },
                    "mediumPictureUrl": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Mediumpictureurl",
                        "description": "Profile picture URL M-size"
                    },
                    "smallPictureUrl": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Smallpictureurl",
                        "description": "Profile picture URL S-size"
                    },
                    "status": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Status",
                        "description": "User defined status"
                    },
                    "rating": {
                        "anyOf": [
                            {
                                "$ref": "#/components/schemas/Rating"
                            },
                            {
                                "type": "null"
                            }
                        ]
                    },
                    "online": {
                        "anyOf": [
                            {
                                "type": "string",
                                "format": "date-time"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Online",
                        "description": "Last seen online moment"
                    },
                    "name": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Name",
                        "description": "User real name"
                    },
                    "location": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Location",
                        "description": "User real location"
                    },
                    "registration": {
                        "anyOf": [
                            {
                                "type": "string",
                                "format": "date-time"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Registration",
                        "description": "User registration moment"
                    }
                },
                "type": "object",
                "title": "User"
            },
            "UserEnvelope": {
                "properties": {
                    "resource": {
                        "$ref": "#/components/schemas/User"
                    },
                    "metadata": {
                        "type": "object",
                        "title": "Metadata",
                        "description": "Additional metadata"
                    }
                },
                "type": "object",
                "title": "UserEnvelope"
            },
            "UserRole": {
                "type": "string",
                "enum": [
                    "Guest",
                    "Player",
                    "Administrator",
                    "NannyModerator",
                    "RegularModerator",
                    "SeniorModerator"
                ],
                "title": "UserRole"
            },
            "ValidationError": {
                "properties": {
                    "loc": {
                        "items": {
                            "$ref": "#/components/schemas/ValidationError_loc_item"
                        },
                        "type": "array",
                        "title": "Location"
                    },
                    "msg": {
                        "type": "string",
                        "title": "Message"
                    },
                    "type": {
                        "type": "string",
                        "title": "Error Type"
                    }
                },
                "type": "object",
                "required": [
                    "loc",
                    "msg",
                    "type"
                ],
                "title": "ValidationError"
            },
            "logout_auth_logout_delete_response_200": {},
            "logout_all_auth_logout_all_delete_response_200": {},
            "ValidationError_loc_item": {
                "anyOf": [
                    {
                        "type": "string"
                    },
                    {
                        "type": "integer"
                    }
                ]
            }
        }
    }
}